@{
  Layout = "_Layout";
}
@using GoodTreats.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)

{
  <h3>No treats have been added yet</h3>
}
else
{


<form asp-controller="Treats" asp-action="Index">

</form>
<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
  }
</ul>
}


<button>@Html.ActionLink("Add new treat", "Create", "Treats")</button>

<button type="button" class="btn btn-success">@Html.ActionLink("Home", "Index", "Home")</button>
<button type="button" class="btn btn-danger">@Html.ActionLink(" Flavors", "Index", "Flavors")</button>
<button type="button" class="btn btn-warning">@Html.ActionLink(" treats", "Index","Treats")</button>
