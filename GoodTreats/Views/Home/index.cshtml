@{
  Layout = "_Layout";
}

<h1>Welcome to the Library!</h1>
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("See all treats", "Index", "Treats")</p>

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Account", "Index", "Account")</p>
}
else
{
  <p>@Html.ActionLink("Register", "Register", "Account")</p>
  <p>@Html.ActionLink("Log in", "Login", "Account")</p>
}
<button type="button" class="btn btn-secondary">@Html.ActionLink("Show all treats", "Index")</button>
<button type="button" class="btn btn-success">@Html.ActionLink("Home", "Index", "Home")</button>
<button type="button" class="btn btn-danger">@Html.ActionLink("All Flavors", "Index")</button>
<button type="button" class="btn btn-warning">@Html.ActionLink("Show all treats", "Index", "Treats")</button>

