
@{
  Layout = "_Layout";
}


@if(User.Identity.IsAuthenticated)
{
  <h3>Welcome to the Pierre's GoodTreats shop @User.Identity.Name! You are now signed in. </h3>
  <br/>
  @using(Html.BeginForm("LogOut", "Account"))
  {
    <input type="submit" value="Log out">
  }
  
}
else
{
  <p>Sign back in</p>
}
<h4>@Html.ActionLink("Home" , "Index", "Home" ) || </h4>
