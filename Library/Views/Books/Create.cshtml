@{
  Layout = "_Layout";
}

@model Library.Models.Book

<h4>Add a new BOOK</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title)
  @Html.TextBoxFor(model => model.Title)

  @Html.LabelFor(model => model.Synopsis)
  @Html.TextBoxFor(model => model.Synopsis)

  @Html.Label("Select author")
  @Html.DropDownList("AuthorId")

  <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all BOOKS", "Index")</p>